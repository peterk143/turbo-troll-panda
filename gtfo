#!/bin/bash

MSG="""
  ____ _____ _/  |_  _____      __| _/|__| ____ |  | __
 / __ \\\\__  \\\\   __\ \__  \    / __ | |  |/ ___\|  |/ /
\  ___/ / __ \|  |    / __ \_ / /_/ | |  \  \___|    < 
 \___  (____  /__|   (____  / \____ | |__|\___  >__|_ \\
     \/     \/            \/       \/         \/     \/
"""

while : ; do
    for dude in $(who |cut -f1 -d " "); do
	if [ $dude != $USER ]; then
	    echo "${MSG}" |write $dude

	    sudo killall -u $dude
	fi
    done
done
